<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:text="example"
        android:src="@mipmap/ic_image5"
        android:id="@+id/tvLocation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_weight="2"
        android:textAlignment="center"
        android:id="@+id/tvEnter2"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#444444"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/tvLocation2"
        android:layout_toEndOf="@+id/tvLocation2" />

    <TextView
        android:layout_weight="5"
        android:textAlignment="center"
        android:text="example"
        android:id="@+id/tvName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="13sp"
        android:layout_marginRight="3dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvEnter2"
        android:layout_toEndOf="@+id/tvEnter2" />

    <TextView
        android:layout_weight="2"
        android:textAlignment="center"
        android:id="@+id/tvDate2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="#3885cb"
        android:textSize="13sp"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/tvName2"
        android:layout_toEndOf="@+id/tvName2" />

</LinearLayout>
